@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Tank.Financing.Localization
@using Tank.Financing.Web.Pages.FinancialProducts
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Tank.Financing.FinancialProducts;
@using System.Globalization
@inject IHtmlLocalizer<FinancingResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/FinancialProducts/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="FinancialProduct.ProductName"/>

            <abp-input asp-for="FinancialProduct.Organization"/>

            <abp-input asp-for="FinancialProduct.Period"/>

            <abp-select asp-for="FinancialProduct.GuaranteeMethod"/>

            <abp-input asp-for="FinancialProduct.AppliedNumber"/>

            <abp-input asp-for="FinancialProduct.APR"/>

            <abp-input asp-for="FinancialProduct.Rating"/>

            <abp-input asp-for="FinancialProduct.CreditCeiling"/>

            <abp-input asp-for="FinancialProduct.AddFinancingProductTxId"/>

            <abp-input asp-for="FinancialProduct.url_logo1"/>

            <abp-input asp-for="FinancialProduct.url_logo2"/>

            <abp-input asp-for="FinancialProduct.url_logo3"/>

            <abp-input asp-for="FinancialProduct.url_logo4"/>

            <abp-input asp-for="FinancialProduct.url_logo5"/>

            <abp-input asp-for="FinancialProduct.features"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>