            <a href="#" target="_blank">
                <i class="fa fa-youtube fa-2x p-3"></i>
            </a>
        </div>
        <div class="card mt-3 mb-0 shadow-sm">
            <div class="newsletter-container card-body text-start p-5">
                <abp-row class="row">
                    <abp-column size="_12" size-md="_7">
                        <abp-container class="mb-4 mb-md-0">
                            <abp-row>
                                <abp-column size="Auto">
                                    <img class="img-fluid" src="~/images/etc/email.svg" alt="newsletter-email-icon" height="84" width="84" />
                                </abp-column>
                                <abp-column>
                                    <h3 class="mt-0 mb-2">@L["NewsletterHeader"]</h3>
                                    <p class="mb-0">@L["NewsletterInfo"]</p>
                                </abp-column>
                            </abp-row>
                        </abp-container>
                    </abp-column>
                    <abp-column size="_12" size-md="_5">
                        @{
                            if (GlobalFeatureManager.Instance.IsEnabled<NewslettersFeature>())
                            {
                                @await Component.InvokeAsync(
                                typeof(NewsletterViewComponent),
                                new
                                {
                                    preference = "Newsletter_Default",
                                    source = "PublicWebSite_Footer",
                                    requestAdditionalPreferencesLater = false
                                })
                            }
                        }
                    </abp-column>
                </abp-row>
            </div>
        </div>
    </div>
</div>
